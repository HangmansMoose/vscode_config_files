    /*          Editor Options          */
    "editor.fontFamily": "CaskaydiaMono Nerd Font",
    "editor.fontWeight": "normal",
    "editor.fontSize": 18,
    "editor.stickyScroll.enabled": false,
    "editor.inlayHints.enabled": "off",
    "editor.links": false,
    "editor.lineNumbers": "relative",
    "editor.cursorStyle": "line",
    "editor.tabCompletion": "on",
    "editor.indentSize": "tabSize",
    "editor.renderWhitespace": "none",
    "editor.lightbulb.enabled": "off",
    "editor.bracketPairColorization.enabled": false,
    "editor.minimap.enabled": false,
    //"editor.fontLigatures": "'calt', 'liga', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07'",
    "editor.tokenColorCustomizations": {
      // NOTE: This is essentially a hack to get rid of underlining, italics, and bolding for all
      // themes and languages   
      "textMateRules": [
        {
          "scope": [
            "comment",
            "comment.block",
            "comment.block.documentation",
            "comment.line",
            "constant",
            "constant.character",
            "constant.character.escape",
            "constant.numeric",
            "constant.numeric.integer",
            "constant.numeric.float",
            "constant.numeric.hex",
            "constant.numeric.octal",
            "constant.other",
            "constant.regexp",
            "constant.rgb-value",
            "emphasis",
            "entity",
            "entity.name",
            "entity.name.class",
            "entity.name.function",
            "entity.name.method",
            "entity.name.section",
            "entity.name.selector",
            "entity.name.scope",
            "entity.name.namespace",
            "entity.name.scop-resolution",
            "entity.name.tag",
            "entity.name.type",
            "entity.other",
            "entity.other.attribute-name",
            "entity.other.inherited-class",
            "invalid",
            "invalid.deprecated",
            "invalid.illegal",
            "keyword",
            "keyword.control",
            "keyword.operator",
            "keyword.operator.new",
            "keyword.operator.assignment",
            "keyword.operator.arithmetic",
            "keyword.operator.logical",
            "keyword.other",
            "markup",
            "markup.bold",
            "markup.changed",
            "markup.deleted",
            "markup.heading",
            "markup.inline.raw",
            "markup.inserted",
            "markup.italic",
            "markup.list",
            "markup.list.numbered",
            "markup.list.unnumbered",
            "markup.other",
            "markup.quote",
            "markup.raw",
            "markup.underline",
            "markup.underline.link",
            "meta",
            "meta.block",
            "meta.cast",
            "meta.class",
            "meta.function",
            "meta.function-call",
            "meta.preprocessor",
            "meta.return-type",
            "meta.selector",
            "meta.tag",
            "meta.type.annotation",
            "meta.type",
            "punctuation.definition.string.begin",
            "punctuation.definition.string.end",
            "punctuation.definition.comment",
            "punctuation.separator",
            "punctuation.separator.continuation",
            "punctuation.terminator",
            "storage",
            "storage.modifier",
            "storage.type",
            "storage.type.modifier",
            "string",
            "string.interpolated",
            "string.other",
            "string.quoted",
            "string.quoted.double",
            "string.quoted.other",
            "string.quoted.single",
            "string.quoted.triple",
            "string.regexp",
            "string.unquoted",
            "strong",
            "support",
            "support.class",
            "support.constant",
            "support.function",
            "support.other",
            "support.type",
            "support.type.property-name",
            "support.variable",
            "variable",
            "variable.language",
            "variable.name",
            "variable.other",
            "variable.other.readwrite",
            "variable.parameter"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

    
    /*          Terminal Options          */
    //"terminal.integrated.shell.windows": "c:/Program Files/PowerShell/7/pwsh.exe",
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.rightClickBehavior": "paste",
    "terminal.integrated.fontFamily": "GeistMono Nerd Font",
    "terminal.integrated.fontSize": 16,      
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.profiles.windows": {
      "PowerShell": {
        "path": "C:/Program Files/Powershell/7/pwsh.exe",
        "args": [
          //"-File",
          //"C:/tools/vcvars_powershell.ps1"
        ]
      },
      "cmdDev": {
        "path": "cmd.exe",
        "args": [
          "/k",
          "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\VC\\Auxiliary\\Build\\vcvarsall.bat", 
          "x64"
        ]
      },
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "powershell.promptToUpdatePowerShell": false,

